%section#top-header.row
  - if current_user
    %h1.col-md-2
      = link_to "NutFlix", videos_path
    %ul.col-md-4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", user_queue_items_path(current_user)
      %li= link_to "People"
    %form.col-md-5.navbar-form{action: "/videos/search", method: "get"}
      .form-group
        %input.form-control(name="search" type="text" placeholder="Search for videos here")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome, #{current_user.full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to "Account", "#"
              = link_to "Plan and Billing", "#"
              = link_to "Sign Out", sign_out_path, method: :delete

  - else
    %h1.col-md-2
      = link_to "NutFlix", root_path

    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, Guest
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to "Sign In", sign_in_path

- @categories_w_videos.each_with_index do |(category, videos), index|
  %article.video_category
    %header
      %h3= link_to category, "/genre/#{index + 1}"
    .videos.row
      - videos.each do |video|
        .video.col-sm-2
          = link_to video do
            %img(src="http://localhost:3000/#{video.small_cover_url}")

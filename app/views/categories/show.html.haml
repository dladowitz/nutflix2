%section.genre
  %header.clearfix
    %h1= @category.name
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @videos.each do |video|
      .video.col-md-2
        = link_to video do
          %img(src="http://localhost:3000/#{video.small_cover_url}")
